<h1>Recipe:<%= @recipe.name %></h1>
<h3>Complexity: <%= @recipe.complexity %></h3>
<h3>Genre: <%= @recipe.genre %></h3>

<h1>Ingredients:</h1>
<% @ingredients.each do |ingredient| %>
  <h3><%= ingredient.name %></h3>
<% end %>

<h1>Cost: <%= @cost %></h1>

<%= form_with url: "/recipes/#{@recipe.id}", method: :post, data: { turbo: false } do |form| %>
  <%= form.label :ingredient_id %>
  <%= form.text_field :ingredient_id %>
  <%= form.submit "Submit" %>
<% end %>